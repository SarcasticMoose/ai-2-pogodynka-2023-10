{% extends 'base.html.twig' %}

{% block title %}Forecast index{% endblock %}

{% block body %}
    <h1>Forecast index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>ProbabilityOfPrecipitation</th>
                <th>Cloudy</th>
                <th>Wind</th>
                <th>Temperature</th>
                <th>Humidity</th>
                <th>AmountOfPrecipitation</th>
                <th>Date</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for forecast in forecasts %}
            <tr>
                <td>{{ forecast.id }}</td>
                <td>{{ forecast.ProbabilityOfPrecipitation }}</td>
                <td>{{ forecast.Cloudy }}</td>
                <td>{{ forecast.Wind }}</td>
                <td>{{ forecast.Temperature }}</td>
                <td>{{ forecast.Humidity }}</td>
                <td>{{ forecast.AmountOfPrecipitation }}</td>
                <td>{{ forecast.Date ? forecast.Date|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_forecast_controller_new_show', {'id': forecast.id}) }}">show</a>
                    <a href="{{ path('app_forecast_controller_new_edit', {'id': forecast.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_forecast_controller_new_new') }}">Create new</a>
{% endblock %}
