{% extends 'base.html.twig' %}

{% block title %}Forecast{% endblock %}

{% block body %}
    <h1>Forecast</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ forecast.id }}</td>
            </tr>
            <tr>
                <th>ProbabilityOfPrecipitation</th>
                <td>{{ forecast.ProbabilityOfPrecipitation }}</td>
            </tr>
            <tr>
                <th>Cloudy</th>
                <td>{{ forecast.Cloudy }}</td>
            </tr>
            <tr>
                <th>Wind</th>
                <td>{{ forecast.Wind }}</td>
            </tr>
            <tr>
                <th>Temperature</th>
                <td>{{ forecast.Temperature }}</td>
            </tr>
            <tr>
                <th>Humidity</th>
                <td>{{ forecast.Humidity }}</td>
            </tr>
            <tr>
                <th>AmountOfPrecipitation</th>
                <td>{{ forecast.AmountOfPrecipitation }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ forecast.Date ? forecast.Date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_forecast_controller_new_index') }}">back to list</a>

    {% if is_granted('ROLE_FORECAST_EDIT') %}
        <a href="{{ path('app_forecast_controller_new_edit', {'id': forecast.id}) }}">edit</a>
    {% endif %}

    {% if is_granted('ROLE_FORECAST_DELETE') %}
        {{ include('forecast_controller_new/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
