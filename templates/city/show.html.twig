{% extends 'base.html.twig' %}

{% block title %}City{% endblock %}

{% block body %}
    <h1>City</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ city.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ city.Name }}</td>
            </tr>
            <tr>
                <th>Country</th>
                <td>{{ city.Country }}</td>
            </tr>
            <tr>
                <th>Longitude</th>
                <td>{{ city.Longitude }}</td>
            </tr>
            <tr>
                <th>Latitude</th>
                <td>{{ city.Latitude }}</td>
            </tr>
            <tr>
                <th>Region</th>
                <td>{{ city.Region }}</td>
            </tr>
            <tr>
                <th>CountryCode</th>
                <td>{{ city.CountryCode }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_city_index') }}">back to list</a>

    {% if is_granted('ROLE_LOCATION_EDIT') %}
        <a href="{{ path('app_city_edit', {'id': city.id}) }}">edit</a>
    {% endif %}

    {% if is_granted('ROLE_LOCATION_DELETE') %}
        {{ include('city/_delete_form.html.twig') }}
    {% endif %}

{% endblock %}
