{% extends 'base.html.twig' %}

{% block title %}City index{% endblock %}

{% block body %}
    <h1>City index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Country</th>
                <th>Longitude</th>
                <th>Latitude</th>
                <th>Region</th>
                <th>CountryCode</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for city in cities %}
            <tr>
                <td>{{ city.id }}</td>
                <td>{{ city.Name }}</td>
                <td>{{ city.Country }}</td>
                <td>{{ city.Longitude }}</td>
                <td>{{ city.Latitude }}</td>
                <td>{{ city.Region }}</td>
                <td>{{ city.CountryCode }}</td>
                <td>
                    <a href="{{ path('app_city_show', {'id': city.id}) }}">show</a>
                    <a href="{{ path('app_city_edit', {'id': city.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_city_new') }}">Create new</a>
{% endblock %}
