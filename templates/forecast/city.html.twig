{% extends 'base.html.twig' %}

{# @var city \App\Entity\City #}
{# @var forecast \App\Entity\Forecast #}

{% block title %}Weather in {{ city.name }}, {{ city.country }}{% endblock %}

{% block body %}
    <main>
        <h1>Weather in {{ city.name }}, {{ city.country }}</h1>

        <ul>
            {% for wheather in forecast %}
                <li>{{ wheather.date|date('Y-m-d H:i:s') }}: {{ wheather.temperature }}&deg;C</li>
            {% endfor %}
        </ul>
    </main>
{% endblock %}
